@model Domain.Models.SpotModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar este Spot</h1>

<h3>Tem certeza que deseja apagar este Spot?</h3>
<div>
    <h4>SpotModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataCriacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>
        <dt class="col-sm-6">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Apagar" class="btn btn-danger" />
            </form>
        </dt>
        <dd class="col-sm-6">
            <form asp-action="Index">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Voltar" class="btn btn-primary" />
            </form>
        </dd>
    </dl>
    
</div>
