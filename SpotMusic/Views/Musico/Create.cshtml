@model Domain.Models.MusicoModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar perfil do Musico</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageUri" class="control-label"></label>
                <input type="file" asp-for="ImageUri" class="form-control btn " required accept=".jpg, .png" />
                <span asp-validation-for="ImageUri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrimeiroNome" class="control-label"></label>
                <input asp-for="PrimeiroNome" class="form-control" />
                <span asp-validation-for="PrimeiroNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UltimoNome" class="control-label"></label>
                <input asp-for="UltimoNome" class="form-control" />
                <span asp-validation-for="UltimoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstrumentoPreferido" class="control-label"></label>
                <input asp-for="InstrumentoPreferido" class="form-control" />
                <span asp-validation-for="InstrumentoPreferido" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MultiInstrumentista" /> @Html.DisplayNameFor(model => model.MultiInstrumentista)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PossuiBanda" /> @Html.DisplayNameFor(model => model.PossuiBanda)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Banda" class="control-label"></label>
                <input asp-for="Banda" class="form-control" />
                <span asp-validation-for="Banda" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltart</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
